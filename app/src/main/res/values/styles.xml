<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_view_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/buttons_margin</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
    </style>

    <style name="card_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/playlist_maker_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="settings_text_views_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="settings_images_style">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">44dp</item>
    </style>

    <style name="settings_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_cl_style">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="settings_cl_style">
        <item name="android:background">@color/white</item>
    </style>

    <style name="settings_tv_style">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="settings_arrow">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="settings_card_view_style">
        <item name="cardBackgroundColor">@color/gray</item>
    </style>

    <style name="search_et">
        <item name="android:drawableTint">@color/gray2</item>
        <item name="android:textColorHint">@color/gray2</item>
    </style>

    <style name="search_clear">
        <item name="android:backgroundTint">@color/gray2</item>
    </style>


</resources>